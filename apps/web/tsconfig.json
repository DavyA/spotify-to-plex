{
  "extends": "../../config/typescript/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "composite": false,
    "paths": {
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/library/*": [
        "src/library/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/hoc/*": [
        "src/hoc/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "cronjob/*": [
        "../sync-worker/src/jobs/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "references": [
    {
      "path": "../../packages/shared-types"
    },
    {
      "path": "../../packages/shared-utils"
    },
    {
      "path": "../../packages/http-client"
    },
    {
      "path": "../../packages/plex-config"
    },
    {
      "path": "../../packages/plex-helpers"
    },
    {
      "path": "../../packages/music-search"
    },
    {
      "path": "../../packages/plex-music-search"
    },
    {
      "path": "../../packages/tidal-music-search"
    },
    {
      "path": "../sync-worker"
    }
  ]
}