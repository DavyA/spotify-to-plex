{
  "name": "@spotify-to-plex/plex-config",
  "version": "1.0.0",
  "description": "Shared Plex configuration management",
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./*/*": {
      "types": "./dist/*/*.d.ts",
      "default": "./dist/*/*.js"
    },
    "./*/*/*": {
      "types": "./dist/*/*/*.d.ts",
      "default": "./dist/*/*/*.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@spotify-to-plex/shared-utils": "workspace:*",
    "fs-extra": "^11.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.11",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}