{
  "extends": "../../config/typescript/node.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@spotify-to-plex/music-search": ["../music-search/src"],
      "@spotify-to-plex/music-search/*": ["../music-search/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../shared" },
    { "path": "../music-search" },
    { "path": "../plex-music-search" },
    { "path": "../tidal-music-search" }
  ]
}