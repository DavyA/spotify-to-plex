{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    
    "types": ["node"],
    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}