{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Root TypeScript Config with Project References",
  "files": [],
  "references": [
    {
      "path": "./packages/music-search"
    },
    {
      "path": "./packages/open-spotify-sdk"
    },
    {
      "path": "./packages/plex-music-search"
    },
    {
      "path": "./packages/tidal-music-search"
    },
    {
      "path": "./apps/sync-worker"
    },
    {
      "path": "./apps/web"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spotify-to-plex/music-search": ["./packages/music-search/src"],
      "@spotify-to-plex/music-search/*": ["./packages/music-search/src/*"],
      "@spotify-to-plex/open-spotify-sdk": ["./packages/open-spotify-sdk/src"],
      "@spotify-to-plex/open-spotify-sdk/*": ["./packages/open-spotify-sdk/src/*"],
      "@spotify-to-plex/plex-music-search": ["./packages/plex-music-search/src"],
      "@spotify-to-plex/plex-music-search/*": ["./packages/plex-music-search/src/*"],
      "@spotify-to-plex/tidal-music-search": ["./packages/tidal-music-search/src"],
      "@spotify-to-plex/tidal-music-search/*": ["./packages/tidal-music-search/src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}